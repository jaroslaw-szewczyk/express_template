<h2>Contact me</h2>
{{#if isSent}}
  <div class="isSent">
    <p>The message has been sent! File {{fileName}} has been saved!</p>
    <img src='{{fileDir}}'>
  </div>
{{/if}}
{{#if isError}}
  <div class="isSent">
    <p>You can't leave fields empty!</p>
  </div>
{{/if}}

<form action="/contact/send-message" enctype="multipart/form-data" accept=".jpg, .png, .jpeg, .gif" method="POST">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project design: <input type="file" name="projectDesign">
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>